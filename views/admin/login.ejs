<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }
    
      .login-container {
        height: 100vh;
        background: url("/images/background.jpg") no-repeat fixed center;
        display: flex;
        align-items: center;
        justify-content: center;
        font-family: "Poppins", sans-serif;
      }
    </style>

<section class="login-container">
    <div class="container py-5 h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-8 col-lg-6 col-xl-5">
          <div class="card  text-black" style="border-radius: 1rem;">
            <div class="card-body p-5 text-center">
  
              <div class="mb-md-5 mt-md-4 pb-5">
  
                <h2 class="fw-bold mb-2 ">Admin Login</h2>
                <p class="mb-5">Please enter your login details!</p>
  
               <form method="post" action="/admin/post-login">
                <div class="form-outline mb-4">
                    <input type="email" id="adminEmail" name="email" class="form-control form-control-lg" required />
                    <label class="form-label"  for="adminEmail">Email</label>
                  </div>
    
                  <div class="form-outline mb-4">
                    <input type="password" id="adminPassword" name="password" class="form-control form-control-lg" required />
                    <label class="form-label" for="adminPassword">Password</label>
                  </div>
  
                  <button class="btn btn-primary btn-lg px-5" type="submit">Login</button>
               </form>
  
              </div>
  
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  