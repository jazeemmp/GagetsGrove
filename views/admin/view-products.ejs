<section>
 <div class="container  mt-5">
        <a href="/admin/add-products" class="btn btn-success mb-5">Add Products</a>
    <table class="table">
        <thead>
          <tr>
            <th scope="col">No</th>
            <th scope="col">Title</th>
            <th scope="col">Category</th>
            <th scope="col">Descriptio</th>
            <th scope="col">price</th>
            <th scope="col">Image</th>
          </tr>
        </thead>
        <tbody>
          <% products.forEach((product,index) => { %>
          <tr>
            <th scope="row"><%= index+1 %></th>
            <td><%=product.name%></td>
            <td><%=product.category%></td>
            <td><%=product.description%></td>
            <td><%=product.price%>â‚¹</td>
            <td><img width="50px" src="/uploads/<%= product.images[0] %>" /></td>
            <td><a class="btn btn-primary mb-3" href="/admin/edit-product/<%= product._id %>">Edit</a>
            <a onclick="return confirm('Do you want to delete <%=product.name%>')"  class="btn btn-danger" href="/admin/delete-product/<%= product._id %>">Delete</a></td>
          </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
 </div>
</section>
