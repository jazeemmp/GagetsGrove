<div class="container">
  <h2 class="h2 my-5">Shop by <span>Categories</span></h2>
  <div class="d-flex flex-nowrap flex-md-nowrap overflow-auto custom-category-row">
    <% categories.forEach(category => { %>
      <div class="col-6 col-md-2 d-flex flex-column align-items-center mb-4 category-item">
        <a href="/category/<%= category.slug %>" class="text-decoration-none d-flex flex-column align-items-center">
          <img src="/uploads/<%= category.image %>" width="100" alt="<%= category.name %>" />
          <p class="w-75 text-center mt-3 fw-bold text-dark"><%= category.name %></p>
        </a>
      </div>
    <% }) %>
  </div>
</div>


