<style>
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  .signup-container {
    height: 100vh;
    background: url("/images/background.jpg") no-repeat fixed center;
    display: flex;
    align-items: center;
    justify-content: center;
    font-family: "Poppins", sans-serif;
  }
</style>
<div class="signup-container">
  <section>
    <div class="container h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-lg-12 col-xl-11">
          <div class="card text-black" style="border-radius: 25px">
            <div class="card-body p-md-5">
              <div class="row justify-content-center">
                <!-- Image Column -->
              
                
                <!-- Form Column -->
                <div class="col-md-10 col-lg-6 col-xl-5 mt-5 order-first order-lg-last">
                  <p class="text-center h1 fw-bold mb-5 mx-md-4">
                    Log in
                  </p>
                  
                <form id="loginForm" class="my-5">
                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-envelope fa-lg me-2 fa-fw"></i>
                    <div data-mdb-input-init class="form-outline flex-fill mb-0">
                      <input type="email" id="emailField" name="email" class="form-control" required />
                      <label class="form-label" for="email">Your Email</label>
                      <div class="invalid-feedback">
                        Please enter a valid email address.
                      </div>
                      <p id="email-error" style="position: absolute;font-size: 13px;"></p>
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-lock fa-lg me-2 fa-fw"></i>
                    <div data-mdb-input-init class="form-outline flex-fill mb-0">
                      <input type="password" id="passwordField" name="password" class="form-control" required />
                      <label class="form-label" for="password">Password</label>
                      <div class="invalid-feedback">
                        Please enter a password.
                      </div>
                      <p id="pass-error" style="position: absolute;font-size: 13px;"></p>
                    </div>
                  </div>
                  <div class="d-flex justify-content-between">
                    <a href="/signup" class="link-primary" style="font-size: 1rem">Don't have an account?</a>
                    <div class="signup-btn-container">
                      <button type="submit" id="signupSubmitBtn" class="btn btn-primary btn-lg">
                        Login
                      </button>
                    </div>
                  </div>
                </form>

              </div>
              <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center  order-1 order-lg-2">
                <img src="/images/login.jpg" class="img-fluid" id="signupImg" width="300" alt="Sample image" />
              </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>
