<style>
    .add-address {
        box-shadow: rgba(99, 99, 99, 0.2) 0px 2px 8px 0px;
        width: 100%;
        text-align: start;
        font-weight: 600;
        margin: 30px 0;
        color: #3d3c3c;
        border: 0;
        outline: 0;
        background-color: #fff;
        border-radius: 5px;
        padding: 10px;
    }

    .plus-icon {
        font-size: 1.3rem;
        margin: 0 10px;
    }

    #addressForm {
        display: none;
    }

    #checkoutForm {
        box-shadow: rgba(99, 99, 99, 0.2) 0px 2px 8px 0px;
        padding: 20px;
        border-radius: 5px;
    }
</style>
<div class="container mt-5">
    <div class="row">
        <div class="col-md-4 order-md-2 mb-4">
            <h4 class="d-flex justify-content-between align-items-center mb-3">
                <span class="text-muted">Your cart</span>
                <span class="badge badge-secondary badge-pill">
                    <%= productCount %>
                </span>
            </h4>
            <ul class="list-group mb-3 sticky-top">
                <% cartItems.products.forEach(product=> { %>
                    <li class="list-group-item d-flex justify-content-between lh-condensed">
                        <img src="/uploads/<%= product.productId.image %>" width="80" alt="" />
                        <div>
                            <h6 class="my-0">
                                <%= product.productId.name %>
                            </h6>
                            <small class="text-muted">
                                <%= product.productId.description %>
                            </small>
                        </div>
                        <span class="text-muted">₹ <%= product.priceByQuantity %></span>
                    </li>
                    <% }); %>
                        <li class="list-group-item d-flex justify-content-between">
                            <span>Total (INR)</span>
                            <strong>₹ <%= cartItems.total %></strong>
                        </li>
            </ul>
        </div>
        <div class="col-md-8 order-md-1">
            <h4 class="mb-3">Billing address</h4>
            <button id="add-address" class="add-address">
                <span class="plus-icon">+</span>Add New Adress
            </button>
            <div class="row">
                <form class="needs-validation" id="addressForm" novalidate="">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="firstName">First name</label>
                            <input type="text" class="form-control" id="firstName" name="firstname" required="" />
                            <div class="invalid-feedback">Valid first name is required.</div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="lastName">Last name</label>
                            <input type="text" class="form-control" id="lastName" name="lastname" required="" />
                            <div class="invalid-feedback">Valid last name is required.</div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="email">Email <span class="text-muted">(Optional)</span></label>
                        <input type="email" class="form-control" id="email" name="email"
                            placeholder="you@example.com" />
                        <div class="invalid-feedback">
                            Please enter a valid email address for shipping updates.
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="address">Address</label>
                        <input type="text" class="form-control" name="address" id="address" placeholder="1234 Main St"
                            required="" />
                        <div class="invalid-feedback">
                            Please enter your shipping address.
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-3 mb-3">
                            <label for="zip">Pincode</label>
                            <input type="text" class="form-control" name="pincode" id="pincode" placeholder=""
                                required="" />
                            <div class="invalid-feedback">Pin is code required.</div>
                        </div>
                    </div>
                    <hr class="mb-4" />
                    <div class="d-block my-3">
                        <div class="d-flex mt-4">
                            <button class="btn btn-dark" type="submit">Save</button>
                            <span class="text-primary ml-5 mt-2">Cancel</span>
                        </div>
                    </div>
                    <hr class="mb-4" />
                </form>
              </div>
                <form id="checkoutForm">
                    <div class="custom-control custom-radio">
                        <input id="onlinePayment" name="paymentMethod" type="radio" class="custom-control-input"
                            value="online" checked required />
                        <label class="custom-control-label" for="onlinePayment">Online Payment</label>
                    </div>
                    <div class="custom-control custom-radio">
                        <input id="cashOnDelivery" name="paymentMethod" type="radio" class="custom-control-input"
                            value="cod" required />
                        <label class="custom-control-label" for="cashOnDelivery">Cash on Delivery</label>
                    </div>
                    <input type="text" name="cartId" id="" value="<%= cartItems._id %>" hidden />
                    <button class="btn btn-dark mt-4 btn-block" type="submit">
                        Continue to checkout
                    </button>
                </form>
        </div>
    </div>
</div>
<script>
    const addressForm = document.getElementById("addressForm");
    const addAddress = document.getElementById("add-address");
    addAddress.addEventListener("click", () => {
        addressForm.style.display = "block";
    });
    addressForm.addEventListener("submit", async (event) => {
        event.preventDefault();
        const formData = new FormData(event.target);

        const firstName = formData.get("firstname");
        const lastName = formData.get("lastname");
        const email = formData.get("email");
        const address = formData.get("address");
        const pincode = formData.get("pincode");
        // const paymentMethod = formData.get('paymentMethod');
        try {
            const response = await fetch("/place-order", {
                method: "post",
                headers: {
                    "Content-Type": "application/json",
                },
                body: JSON.stringify({ firstName, lastName, email, address, pincode }),
            });
            if (!response.ok) {
                throw new Error("not valid");
            }
        } catch (error) {
            console.log(error);
        }
    });
</script>